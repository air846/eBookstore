page {
  background: linear-gradient(180deg, #f7f1e8 0%, #efe4d6 100%);
  color: #3f342b;
  font-size: 28rpx;
  font-family: "PingFang SC", "Helvetica Neue", Arial, sans-serif;
}

.container {
  padding: 28rpx;
}

.card {
  background: #fbf6ef;
  border-radius: 24rpx;
  padding: 26rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(126, 95, 68, 0.12);
  box-shadow: 0 10rpx 28rpx rgba(102, 74, 49, 0.08);
}

.title {
  font-size: 36rpx;
  line-height: 1.35;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.sub {
  color: #8f7560;
  font-size: 24rpx;
}

.book-cover {
  width: 148rpx;
  height: 198rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #e5d5c2, #ccb195);
}

button {
  border-radius: 999rpx;
  border: none;
}

button[type="primary"] {
  background: linear-gradient(90deg, #8c5e39, #6b462a);
  color: #fff8f1;
}
