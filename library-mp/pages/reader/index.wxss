.reader {
  min-height: 100vh;
}

.reader.dark {
  background: #25201b;
  color: #e8ded2;
}

.reader.dark .card {
  background: #352d26;
}

.toolbar {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.picker-wrap {
  flex: 1;
}

.picker {
  background: #f5ede3;
  border-radius: 14rpx;
  padding: 14rpx;
  color: #5b4532;
}

.reader.dark .picker {
  background: #473b30;
  color: #e8ded2;
}

.mode-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 14rpx;
}

.mode-active {
  color: #7f5536;
  font-weight: 600;
}

.progress {
  margin-left: auto;
}

.paragraph-block {
  margin-bottom: 22rpx;
}

.paragraph {
  line-height: 2;
  white-space: pre-wrap;
  text-indent: 2em;
  color: #4a392b;
  word-break: break-all;
  overflow-wrap: break-word;
}

.comment-bubble-inline {
  display: inline-block;
  margin-left: 4rpx;
  padding: 0 6rpx;
  border-radius: 10rpx;
  background: rgba(255, 244, 234, 0.85);
  color: #b4602e;
  border: 1rpx solid rgba(231, 183, 143, 0.8);
  font-size: 18rpx;
  line-height: 1.3;
  font-weight: 500;
  vertical-align: middle;
}

.chapter-actions {
  margin-top: 18rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.loading,
.error {
  text-align: center;
  padding: 12rpx 0;
}

.error {
  color: #b94131;
}

.comment-mask {
  position: fixed;
  z-index: 88;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
}

.comment-panel {
  position: fixed;
  z-index: 89;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 78vh;
  background: #fbf6ef;
  border-top-left-radius: 22rpx;
  border-top-right-radius: 22rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.comment-panel.dark {
  background: #352d26;
  color: #e8ded2;
}

.comment-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sort-row {
  display: flex;
  gap: 10rpx;
}

.reply-tip {
  background: #f2e8dc;
  border-radius: 10rpx;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-panel.dark .reply-tip {
  background: #4a3f35;
}

.comment-input {
  width: 100%;
  min-height: 130rpx;
  border: 1rpx solid rgba(121, 91, 66, 0.2);
  border-radius: 10rpx;
  padding: 12rpx;
  box-sizing: border-box;
}

.submit-btn {
  align-self: flex-end;
}

.comment-list {
  height: 46vh;
}

.comment-item {
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(121, 91, 66, 0.14);
}

.reader.dark .comment-item {
  border-bottom-color: #5b4a3e;
}

.comment-content {
  line-height: 1.7;
  color: inherit;
}

.comment-user {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 6rpx;
}

.avatar,
.avatar-fallback {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}

.avatar-fallback {
  background: #e8d7c3;
  color: #72553c;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}

.comment-meta {
  margin-top: 8rpx;
}

.comment-actions {
  margin-top: 8rpx;
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.reply-item {
  margin-top: 10rpx;
  margin-left: 24rpx;
  padding-left: 12rpx;
  border-left: 4rpx solid rgba(121, 91, 66, 0.22);
}

.reader.dark .reply-item {
  border-left-color: #6e5949;
}
