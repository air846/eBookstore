.search-row {
  display: flex;
  gap: 10rpx;
}

.search {
  flex: 1;
  border: 1rpx solid rgba(121, 91, 66, 0.18);
  border-radius: 14rpx;
  padding: 14rpx 18rpx;
  background: #fffdf9;
}

.search-btn {
  margin: 0;
  background: #7f5536 !important;
  color: #fff7ef !important;
}

.category-scroll {
  white-space: nowrap;
  margin-top: 16rpx;
}

.chip {
  display: inline-block;
  padding: 10rpx 22rpx;
  border-radius: 999rpx;
  background: #efe2d3;
  margin-right: 12rpx;
  font-size: 24rpx;
  color: #6f523b;
}

.chip.active {
  background: #7d5131;
  color: #fff8f2;
}

.book-row {
  display: flex;
  gap: 18rpx;
  margin-bottom: 18rpx;
  padding: 14rpx;
  border-radius: 16rpx;
  background: #fffdf8;
  border: 1rpx solid rgba(121, 91, 66, 0.12);
}

.book-meta {
  flex: 1;
}

.book-title {
  font-size: 31rpx;
  font-weight: 600;
}

.book-author {
  margin-top: 10rpx;
  color: #8c7059;
}

.load-more {
  text-align: center;
  color: #7f5536;
  padding: 14rpx 0;
}

.loading,
.empty,
.error {
  text-align: center;
  padding: 16rpx 0;
}

.error {
  color: #b94131;
}
