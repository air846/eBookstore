.container {
  padding-top: 88rpx;
}

.cover-showcase {
  height: 300rpx;
  border-radius: 28rpx;
  padding: 34rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #b07d52 0%, #7f5536 48%, #5c3c27 100%);
  color: #fff7ee;
  box-shadow: 0 16rpx 30rpx rgba(80, 52, 34, 0.28);
}

.cover-title {
  font-size: 54rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.cover-sub {
  margin-top: 16rpx;
  font-size: 26rpx;
  opacity: 0.9;
}

.login-card {
  padding-top: 30rpx;
}

.login-tip {
  margin-top: 8rpx;
}

.form-row {
  margin: 20rpx 0 0;
  border: 1rpx solid rgba(121, 91, 66, 0.18);
  border-radius: 16rpx;
  padding: 18rpx 22rpx;
  background: #fffdf9;
}

.mini-login-btn {
  margin-top: 18rpx;
  background: #f2e5d6 !important;
  color: #6a4a31 !important;
}
