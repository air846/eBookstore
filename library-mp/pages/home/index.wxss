.banner {
  height: 420rpx;
  border-radius: 26rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 26rpx rgba(95, 66, 41, 0.22);
}

.banner-image {
  width: 100%;
  height: 100%;
}

.title-sm {
  font-size: 32rpx;
  font-weight: 600;
}

.book-list {
  display: flex;
  overflow-x: auto;
  gap: 20rpx;
  margin-top: 18rpx;
}

.book-item {
  min-width: 184rpx;
}

.book-title {
  margin-top: 10rpx;
  font-size: 25rpx;
  line-height: 1.4;
  color: #453628;
}

.section-head {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}
