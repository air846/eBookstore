.book-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
  padding: 14rpx;
  border-radius: 16rpx;
  background: #fffdf8;
  border: 1rpx solid rgba(121, 91, 66, 0.12);
}

.book-meta {
  flex: 1;
}

.book-title {
  font-size: 31rpx;
  font-weight: 600;
}

.book-author {
  margin-top: 10rpx;
  color: #8c7059;
}

.action-row {
  margin-top: 14rpx;
}

.error {
  color: #b94131;
}
