.book-head {
  display: flex;
  gap: 22rpx;
}

.book-meta {
  flex: 1;
}

.desc {
  margin-top: 20rpx;
  line-height: 1.95;
  color: #594635;
  background: #fffdf8;
  border-radius: 14rpx;
  border: 1rpx solid rgba(121, 91, 66, 0.12);
  padding: 18rpx;
}

.action-row {
  margin-top: 24rpx;
  display: flex;
  gap: 14rpx;
}

.loading,
.error {
  text-align: center;
  padding: 16rpx 0;
}

.error {
  color: #b94131;
}
